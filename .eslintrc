{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [2, 4],
        "no-console": 0,
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "vars-on-top": 1
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "require": true,
        "module": true,
        "__dirname": true,
        "describe": true,
        "it": true,
        "expect": true,
        "App": true,
        "xxs": true,
        "xs": true,
        "sm": true,
        "md": true,
        "lg": true,
        "xl": true,
        "xxl": true,
        "global": true
    },
    "extends": "eslint:recommended"
}
